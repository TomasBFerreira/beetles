{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h2>Create a New Beetle</h2>

        {{ form_start(form) }}
        {{ form_row(form.lineage)}}
        {{ form_row(form.gen) }}
        {{ form_row(form.sex) }}
        {{ form_row(form.date) }}
        {{ form_row(form.length) }}
        {{ form_label(form.relationship) }}
        {{ form_widget(form.relationship, { 'attr': {'class': 'relationship-dropdown'} }) }}
        <button type="submit" class="btn btn-primary">Create Beetle</button>
        {{ form_end(form) }}
    </div>
{% endblock %}