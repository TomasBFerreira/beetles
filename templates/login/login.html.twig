{% extends 'base.html.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center">Login</h2>
                    {{ form_start(form, {'attr': {'class': 'form-signin', 'novalidate': 'novalidate'}}) }}

                    <div class="form-group">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'sr-only'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email', 'required': 'required'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password, 'Password', {'label_attr': {'class': 'sr-only'}}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Password', 'required': 'required'}}) }}
                    </div>

                    <div class="text-center mt-3"> 
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary', 'type': 'submit'}}) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
